<?xml version="1.1" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>sivig</display-name>
  <session-config>
		<session-timeout>60</session-timeout>
	</session-config>
  <context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>
	
	<context-param>
	<param-name>javax.faces.FACELETS_REFRESH_PERIOD</param-name>
	<param-value>2</param-value>
	</context-param>
	
	<context-param>
	<param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
	<param-value>true</param-value>
	</context-param>
	
	<context-param>
	    <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
	    <param-value>true</param-value>
	</context-param>
	
	<welcome-file-list>
        <welcome-file>/protected/main.xhtml</welcome-file>
    </welcome-file-list>
    
    <context-param>  
	    <param-name>com.sun.faces.numberOfLogicalViews</param-name>
	    <param-value>2</param-value>
	</context-param>
	
	<context-param>  
	    <param-name>com.sun.faces.numberOfViewsInSession</param-name>  
	    <param-value>2</param-value>
	</context-param>
	
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>/faces/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.faces</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	
	<login-config>
      <auth-method>FORM</auth-method>
      <realm-name>sivig-domain</realm-name>
      <form-login-config>
         <form-login-page>/Login.xhtml</form-login-page>
         <form-error-page>/error.xhtml?errorNro=Login</form-error-page>
      </form-login-config>
   </login-config>
   <security-constraint>
      <display-name>PÃ¡ginas con acceso restringido</display-name>
      <web-resource-collection>
         <web-resource-name>pages_auth</web-resource-name>
         <url-pattern>/protected/*</url-pattern>
      </web-resource-collection>
      <auth-constraint>
         <role-name>admin</role-name>
      </auth-constraint>
   </security-constraint>
   <security-role>
      <role-name>admin</role-name>
   </security-role>
   <error-page>
        <error-code>403</error-code>
        <location>/error.xhtml?errorNro=403</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error.xhtml?errorNro=500</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error.xhtml?errorNro=404</location>
    </error-page>
    <error-page>
        <error-code>408</error-code>
        <location>/error.xhtml?errorNro=408</location>
    </error-page>
</web-app>